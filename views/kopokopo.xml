<odoo>
    <record id="view_kopokopo_form" model="ir.ui.view">
        <field name="name">kopokopo.form</field>
        <field name="model">radius_manager.kopokopo</field>
        <field name="arch" type="xml">
            <form string="Kopokopo">
                <sheet>
                    <group>
                        <field name="client_id"/>
                        <field name="client_secret"/>
                        <field name="api_key"/>
                        <field name="till_number"/>
                        <field name="base_url"/>
                        <field name="incoming_payments_callback_url"/>
                        <field name="webhook_subscription_url"/>
                    </group>
                    <notebook>
                        <page string="Access Tokens" name="access_tokens">
                            <field name="access_token_ids">
                                <list string="Access Tokens">
                                    <field name="access_token"/>
                                    <field name="token_type"/>
                                    <field name="expires_in"/>
                                    <field name="created_at"/>
                                </list>
                            </field>
                        </page>
                        <page string="Webhooks" name="webhooks">
                            <field name="webhook_ids">
                                <list string="Webhooks">
                                    <field name="event_type"/>
                                    <field name="webhook_url"/>
                                    <field name="scope"/>
                                    <field name="scope_value"/>
                                    <field name="active"/>
                                </list>
                            </field>
                        </page>
                        <page string="Buygoods Transactions" name="bug_goods_transactions">
                            <field name="buygoods_transaction_received_ids">
                                <list string="Buygoods Transactions Received" create="false" edit="false">
                                    <field name="topic"/>
                                    <field name="transaction_id"/>
                                    <field name="created_at"/>
                                    <field name="event_type"/>
                                    <field name="resource_id"/>
                                    <field name="amount"/>
                                    <field name="status"/>
                                    <field name="system"/>
                                    <field name="currency"/>
                                    <field name="reference"/>
                                    <field name="till_number"/>
                                    <field name="sender_phone_number"/>
                                    <field name="hashed_sender_phone"/>
                                    <field name="origination_time"/>
                                    <field name="sender_last_name"/>
                                    <field name="sender_first_name"/>
                                    <field name="sender_middle_name"/>
                                    <field name="self_link"/>
                                    <field name="resource_link"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_kopokopo" model="ir.actions.act_window">
        <field name="name">Kopokopo</field>
        <field name="res_model">radius_manager.kopokopo</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_kopokopo_main"
              name="KOPOKOPO"
              parent="menu_hotspot_home"/>

    <menuitem id="menu_kopokopo"
              name="Account"
              parent="menu_kopokopo_main"
              action="action_kopokopo"/>
</odoo>