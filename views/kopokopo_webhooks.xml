<odoo>
    <record id="view_kopokopo_webhook_form" model="ir.ui.view">
        <field name="name">kopokopo.webhook.form</field>
        <field name="model">radius_manager.kopokopo_webhook</field>
        <field name="arch" type="xml">
            <form string="Kopokopo Webhook">
                <sheet>
                    <group>
                        <field name="event_type"/>
                        <field name="webhook_url"/>
                        <field name="scope"/>
                        <field name="scope_value"/>
                        <field name="kopo_kopo_id"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kopokopo_webhook_list" model="ir.ui.view">
        <field name="name">kopokopo.webhook.list</field>
        <field name="model">radius_manager.kopokopo_webhook</field>
        <field name="arch" type="xml">
            <list string="Kopokopo Webhooks" default_order="id desc">
                <field name="event_type"/>
                <field name="webhook_url"/>
                <field name="scope"/>
                <field name="scope_value"/>
                <field name="kopo_kopo_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>


    <record id="action_kopokopo_webhook" model="ir.actions.act_window">
        <field name="name">Kopokopo Webhooks</field>
        <field name="res_model">radius_manager.kopokopo_webhook</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_kopokopo_webhook"
              name="Webhooks"
              parent="menu_kopokopo_main"
              action="action_kopokopo_webhook"/>

</odoo>