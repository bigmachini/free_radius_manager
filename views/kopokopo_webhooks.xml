<odoo>
    <record id="view_kopokopo_webhook_form" model="ir.ui.view">
        <field name="name">kopokopo.webhook.form</field>
        <field name="model">radius_manager.kopokopo_webhook</field>
        <field name="arch" type="xml">
            <form string="Kopokopo Webhook">
                <sheet>
                    <group>
                        <field name="event_type"/>
                        <field name="webhook_url"/>
                        <field name="scope"/>
                        <field name="scope_value"/>
                        <field name="kopo_kopo_id"/>
                        <field name="active"/>
                    </group>
                    <notebook>
                        <page string="Buy Goods Transactions" name="bug_goods_transactions">
                            <field name="buygoods_transaction_received_ids">
                                <list string="Buy Goods Transactions" create="false" edit="false">
                                    <field name="topic"/>
                                    <field name="transaction_id"/>
                                    <field name="created_at"/>
                                    <field name="event_type"/>
                                    <field name="resource_id"/>
                                    <field name="amount"/>
                                    <field name="status"/>
                                    <field name="system"/>
                                    <field name="currency"/>
                                    <field name="reference"/>
                                    <field name="till_number"/>
                                    <field name="sender_phone_number"/>
                                    <field name="hashed_sender_phone"/>
                                    <field name="origination_time"/>
                                    <field name="sender_last_name"/>
                                    <field name="sender_first_name"/>
                                    <field name="sender_middle_name"/>
                                    <field name="self_link"/>
                                    <field name="resource_link"/>
                                </list>
                            </field>
                        </page>

                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_kopokopo_webhook_list" model="ir.ui.view">
        <field name="name">kopokopo.webhook.list</field>
        <field name="model">radius_manager.kopokopo_webhook</field>
        <field name="arch" type="xml">
            <list string="Kopokopo Webhooks" default_order="id desc">
                <field name="event_type"/>
                <field name="webhook_url"/>
                <field name="scope"/>
                <field name="scope_value"/>
                <field name="kopo_kopo_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>


    <record id="action_kopokopo_webhook" model="ir.actions.act_window">
        <field name="name">Kopokopo Webhooks</field>
        <field name="res_model">radius_manager.kopokopo_webhook</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_kopokopo_webhook"
              name="Webhooks"
              parent="menu_kopokopo_main"
              action="action_kopokopo_webhook"/>

</odoo>