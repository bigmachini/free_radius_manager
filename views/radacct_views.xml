<odoo>
    <record id="view_radacct_form" model="ir.ui.view">
        <field name="name">radacct.form</field>
        <field name="model">radacct</field>
        <field name="arch" type="xml">
            <form create="false" string="RADIUS Accounting">
                <sheet>
                    <group>
                        <group>
                            <field name="acctsessionid"/>
                            <field name="acctuniqueid"/>
                            <field name="username"/>
                            <field name="realm"/>
                            <field name="nasipaddress"/>
                            <field name="nasportid"/>
                            <field name="nasporttype"/>
                            <field name="acctstarttime"/>
                            <field name="acctupdatetime"/>
                            <field name="acctstoptime"/>
                        </group>
                        <group>
                            <field name="acctsessiontime"/>
                            <field name="acctauthentic"/>
                            <field name="connectinfo_start"/>
                            <field name="connectinfo_stop"/>
                            <field name="acctinputoctets"/>
                            <field name="acctoutputoctets"/>
                            <field name="calledstationid"/>
                            <field name="callingstationid"/>
                            <field name="acctterminatecause"/>
                            <field name="servicetype"/>
                        </group>
                        <group>
                            <field name="servicetype"/>
                            <field name="framedprotocol"/>
                            <field name="framedipaddress"/>
                            <field name="framedipv6address"/>
                            <field name="framedipv6prefix"/>
                            <field name="framedinterfaceid"/>
                            <field name="delegatedipv6prefix"/>
                            <field name="acctstartdelay"/>
                            <field name="acctstopdelay"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_radacct_list" model="ir.ui.view">
        <field name="name">radacct_list</field>
        <field name="model">radacct</field>
        <field name="arch" type="xml">
            <list create="false" string="RADIUS Accounting">
                <field name="username"/>
                <field name="callingstationid"/>
                <field name="acctinputoctets"/>
                <field name="acctoutputoctets"/>
                <field name="acctsessiontime"/>
                <field name="acctstarttime"/>
                <field name="acctupdatetime"/>
                <field name="acctstoptime"/>
            </list>
        </field>
    </record>

    <record id="action_radacct" model="ir.actions.act_window">
        <field name="name">RADIUS Accounting</field>
        <field name="res_model">radacct</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_radacct" name="RADIUS Accounting" parent="menu_radcheck_home" action="action_radacct"/>
</odoo>