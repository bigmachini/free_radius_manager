<odoo>
    <record id="view_radpostauth_list" model="ir.ui.view">
        <field name="name">radpostauth.list</field>
        <field name="model">radpostauth</field>
        <field name="arch" type="xml">
            <list create="false" string="RADIUS Post-Auth">
                <field name="username"/>
                <field name="pass"/>
                <field name="reply"/>
                <field name="authdate"/>
            </list>
        </field>
    </record>

    <record id="view_radpostauth_form" model="ir.ui.view">
        <field name="name">radpostauth.form</field>
        <field name="model">radpostauth</field>
        <field name="arch" type="xml">
            <form create="false" string="RADIUS Post-Auth">
                <sheet>
                    <group>
                        <field name="username"/>
                        <field name="pass"/>
                        <field name="reply"/>
                        <field name="authdate"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_radpostauth" model="ir.actions.act_window">
        <field name="name">RADIUS Post-Auth</field>
        <field name="res_model">radpostauth</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_radpostauth" name="RADIUS Post-Auth" parent="menu_radcheck_home" action="action_radpostauth"/>
</odoo>